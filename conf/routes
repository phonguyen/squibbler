# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Users Controller
POST	/users						controllers.UserController.createUser()
POST	/login						controllers.UserController.loginByUsername()
POST	/login_by_email				controllers.UserController.loginByEmail()
POST	/change_password			controllers.UserController.changePassword()
POST	/prof_pic					controllers.UserController.uploadProfilePic()
POST	/remove_prof_pic			controllers.UserController.removeProfilePic()
POST	/my_details					controllers.UserController.updateUser()
GET		/users/:username			controllers.UserController.getUserDetails(username: String)
POST	/find_friends_by_fb			controllers.UserController.findFriendsByFacebook()
POST	/find_friends_by_phone		controllers.UserController.findFriendsByPhoneNumbers()
GET		/user_search				controllers.UserController.searchByUsernameOrName()
POST	/logout						controllers.UserController.logout()
GET		/check_phone_number/:phone_number	controllers.UserController.checkPhoneNumber(phone_number: String)
GET		/check_fb_id/:fb_id			controllers.UserController.checkFacebookID(fb_id: String)
POST	/delete_user				controllers.UserController.deleteUser()

# Friends Controller
POST	/users/:friend/add_friend	controllers.FriendController.addFriendRequest(friend: String)
POST	/users/add_friends			controllers.FriendController.addFriendRequests()
POST	/users/:friend/cancel_friend	controllers.FriendController.cancelFriendRequest(friend: String)
POST	/respond_friend_request		controllers.FriendController.respondFriendRequest()
POST	/users/:friend/remove_friend	controllers.FriendController.removeFriend(friend: String)
GET		/users/:username/friends	controllers.FriendController.getFriends(username: String)
GET		/pending_requests			controllers.FriendController.getPendingFriends()

# Squibs Controller
POST	/my_squibs/post_squib		controllers.SquibController.postSquib()
POST	/my_squibs/edit_squib		controllers.SquibController.editSquib()
POST	/my_squibs/delete_squib		controllers.SquibController.deleteSquib()
POST	/my_squibs/:post_id/squib_pic	controllers.SquibController.uploadSquibPic(post_id: String)
POST	/my_squibfeed				controllers.SquibController.getPrivateSquibFeed()
POST	/public_squibfeed			controllers.SquibController.getPublicSquibFeed()
GET		/users/:username/squibs		controllers.SquibController.getSquibs(username: String)

#GET		/squibs/test				controllers.SquibController.test()

# Notifications Controller
GET		/my_notifications			controllers.NotificationController.getNotifications()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#GET		/test						controllers.UsersController.test()
